{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Markdown File Schema",
  "description": "Schema for validating file metadata",
  "type": "object",
  "properties": {
    "file_name": {
      "type": "string",
      "pattern": "\\.md$"
    },
    "file_type": {
      "type": "string"
    }
  },
  "required": ["file_name", "file_type"]
}
